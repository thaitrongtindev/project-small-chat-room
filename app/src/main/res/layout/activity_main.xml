<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="408dp"
        android:background="@drawable/toolbar_backgorund"
        android:elevation="5dp"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageBtn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/round_ripple"
                android:src="@drawable/ic_back"></ImageButton>

            <ImageView
                android:id="@+id/image_chatRoom"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/chat"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/image_chatRoom"
                android:fontFamily="serif"
                android:text="Chat Room"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_content_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/relavtiveLayout"
        android:background="@drawable/background_main"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/relavtiveLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/imgbtn_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_camera"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_ripple"
            android:layout_marginStart="10dp"></ImageButton>

        <EditText
            android:id="@+id/edit_input_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/fffbfe"
            android:layout_toStartOf="@+id/imgbtn_send"
            android:layout_toEndOf="@id/imgbtn_camera"
            android:hint="@string/input_message" />

        <ImageButton
            android:id="@+id/imgbtn_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_send"
            android:background="@drawable/round_ripple"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"></ImageButton>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>