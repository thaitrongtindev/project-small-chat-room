<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDE2EE"
    tools:context=".activities.StartChatActivity">


    <ImageView
        android:id="@+id/img_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/start_catwebp"
         />

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        app:optRoundCardBackgroundColor="#A4FFFFFF"
        app:optRoundCardCornerRadius="50dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_attach_email_24"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:padding="20dp"
                android:text="@string/start_sending_message_in_the_chat_room"
                android:textColor="#157554"
                android:textSize="22sp"></TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_enter"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/_3ec4dc"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/round_notificatiion"
                        android:paddingStart="10dp"
                        android:paddingRight="10dp"
                        android:text="20"
                        android:textColor="@color/white"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Enter"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:textStyle="italic"></TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </com.github.captain_miao.optroundcardview.OptRoundCardView>
</RelativeLayout>